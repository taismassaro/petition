
<main id="thanks">
    {{>nav}}
    <div class="nav">
        <a href="/petition/logout">Logout</a>
    </div>
    <div>
        {{#if count}}
        <label>Signature #{{count}}</label>
        {{/if}}

        {{#if signature}}
        <div id="signed" class="canvas">
            <img src="{{signature}}">
        </div>
        {{/if}}
        {{#if user}}
        <h1>Thanks for your support, {{user.first}}!</h1>
        {{/if}}
        <p class="cat"><a href="/petition/signatures">Check out who else signed</a></p>
    </div>
</main>
